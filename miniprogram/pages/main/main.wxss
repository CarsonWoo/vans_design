/* pages/main/main.wxss */
page {
  height: 100%;
  width: 100%;
  overflow-x: hidden;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  position: relative;
  flex-direction: column;
}

movable-area {
  width: 100%;
  height: 100%;
}

.movable-clothes {
  width: 300rpx;
  z-index: 999;
}

.movable-pants {
  width: 350rpx;
  z-index: 1000;
}

.show-clothes {
  width: 100%;
}

.show-pants {
  width: 100%;
}

.option-panel {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  background-color: #F8F8F8;
  position: absolute;
  bottom: 0;
  box-shadow: 0px -5px 10px #DDDDDD;
  z-index: 9999;
  overflow: scroll;
}

.option-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  box-shadow: 1px 3px 5px #0F0F0F;
  background-color: white; 
  padding: 10rpx;
}

.option-item image {
  width: 160rpx;
  height: 160rpx;
}